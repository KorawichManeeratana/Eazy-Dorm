<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>addroom</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        main {
            background-color: #CABA9C;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .main {
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 1200px;
            height: 75vh;
            overflow: hidden;
            box-sizing: border-box;
            margin-top: 50px;
        }

        .text-information {
            display: flex;
            flex-direction: column;
            gap: 15px;
            font-size: 16px;
            padding: 20px;
            overflow-y: auto;
        }

        .text-information label {
            font-weight: bold;
            margin-bottom: 8px;
            /* เพิ่มระยะห่าง */
            display: block;
        }

        .text-information input,
        .text-information select {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
            transition: border-color 0.3s ease-in-out;
            margin-bottom: 15px;
            /* เพิ่มระยะห่าง */
        }


        .text-information input:focus,
        .text-information select:focus {
            border-color: #8A6240;
        }
        .bt-save {
            background-color: #8A6240;
            color: white;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: underline;
            margin-top: 15px;
        }

        .bt-save:hover {
            background-color: #6d4f34;
            transform: scale(1.05);
        }

        button {
            max-height: 50px;
        }

        .btfromdevice {
            margin-top: 15px;
            background-color: #8A6240;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            text-decoration: underline;
        }

        .btfromdevice:hover {
            background-color: #6d4f34;
            transform: scale(1.05);
        }

        .btback {
            position: absolute;
            bottom: 10%;
            right: 10%;
            background-color: #8A6240;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            text-decoration: underline;
        }

    </style>
</head>

<body>
    <main>
        <div class="main">
            <!-- ส่วนข้อมูลห้อง -->
            <div class="text-information">
                <h1>เพิ่มห้องพัก</h1>
                <form action="/addroom/process_addroom/<%= dormid %>" method="post" onsubmit="return validate(event);">
                    <label for="room_number">เลขที่ห้อง :</label>
                    <input type="text" placeholder="กรอกเลขที่ห้อง" name="room_number" id="room_number" required>

                    <label for="floor">ชั้น :</label>
                    <input type="number" placeholder="กรอกชั้น" name="floor" id="floor" required>

                    <label for="size">ขนาดห้อง (ตร.ม.) :</label>
                    <input type="number" placeholder="กรอกขนาดห้อง" name="size" id="size" required>

                    <label for="rent">ราคา :</label>
                    <input type="number" placeholder="กรอกราคา" name="rent" id="rent" required>
                    <button class="bt-save" type="submit">บันทึกข้อมูล</button>
                </form>
            </div>
        </div>
    </main>

    <script>
        function validate(event) {
            event.preventDefault();
            let form = event.target;
            let floor = document.getElementById("floor").value.trim();
            let size = document.getElementById("size").value.trim();
            let rent = document.getElementById("rent").value.trim();
            let isValid = true;

            if (isNaN(floor) || floor === "") {
                alert("ชั้นต้องเป็นตัวเลขเท่านั้น");
                isValid = false;
                return false;
            }

            if (isNaN(size) || size === "") {
                alert("ขนาดห้องต้องเป็นตัวเลขเท่านั้น หน่วยเป็น ตร.ม.");
                isValid = false;
                return false;
            }
            if (isNaN(rent) || rent === "") {
                alert("ราคาต้องเป็นตัวเลขเท่านั้น");
                isValid = false;
                return false;
            }
            if (isValid) {
                form.submit();
            }
        }

    </script>
</body>

</html>